<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="320dp">

    <View
            android:id="@+id/box_empty_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#dedede"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/box_empty_view">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <View
                    android:id="@+id/view3"
                    android:layout_width="60dp"
                    android:layout_height="@dimen/dummy_field_height"
                    android:layout_marginStart="@dimen/news_column_news_left_right_padding"
                    android:layout_marginTop="@dimen/dummy_channel_name_top"
                    android:background="#bababa"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dummy_field_title_height"
                    android:layout_marginEnd="@dimen/dummy_column_margin_4"
                    android:layout_marginStart="@dimen/news_column_news_left_right_padding"
                    android:layout_marginTop="@dimen/dummy_first_item_margin_top"
                    android:background="#bababa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

            <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dummy_field_title_height"
                    android:layout_marginEnd="@dimen/dummy_column_margin_3"
                    android:layout_marginStart="@dimen/news_column_news_left_right_padding"
                    android:layout_marginTop="@dimen/dummy_title_other_margin_top"
                    android:background="#bababa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4" />

            <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dummy_field_title_height"
                    android:layout_marginEnd="@dimen/dummy_column_margin_2"
                    android:layout_marginStart="@dimen/news_column_news_left_right_padding"
                    android:layout_marginTop="@dimen/dummy_title_other_margin_top"
                    android:background="#bababa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>